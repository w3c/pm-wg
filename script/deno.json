{
  "description": "Generation of index and resolutions' files for W3C WG/IG minutes.",
  "version": "1.0.0.",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "esnext",
      "deno.ns"
    ]
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 120,
    "indentWidth": 4,
    "proseWrap": "preserve"
  },
  "tasks": {
    "run" : "deno run --allow-net --allow-read --allow-write --allow-env main.ts"
  }
}
